@model estacionamento_dapper.Models.Vaga

@{
    ViewData["Title"] = "Incluir Vaga";
}

<div class="text-center">
    <h1 class="display-4">Novo Vaga</h1>
</div>

<div class="text-left">

    <form asp-action="Criar" asp-controller="Vagas" method="post">
        <div class="form-group">
            <label for="CodigoLocalizacao">CodigoLocalizacao</label>
            <input type="text" class="form-control" id="CodigoLocalizacao" asp-for="CodigoLocalizacao" required>
        </div>

        <div class="form-group">
            <label for="Ocupada">Ocupada</label>
            <input type="checkbox" id="Ocupada" asp-for="Ocupada">
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

</div>
